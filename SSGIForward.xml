<renderpath>
    <command type="clear" color="fog" depth="1.0" stencil="0" />
    <command type="scenepass" pass="base" vertexlights="true" metadata="base" />
    <command type="forwardlights" pass="light" />
    <command type="scenepass" pass="postopaque" />
    <command type="scenepass" pass="refract">
        <texture unit="environment" name="viewport" />
    </command>
    <command type="scenepass" pass="alpha" vertexlights="true" sort="backtofront" metadata="alpha" />
    <command type="scenepass" pass="postalpha" sort="backtofront" />
    <!-- SSGI Begin -->
    <rendertarget name="depth" size="32 32" format="lineardepth" filter="true" />
    <command type="clear" color="1 1 1 1" depth="1.0" stencil="0" output="depth" />
    <!-- Render depth buffer -->
    <command type="scenepass" pass="depth" output="depth" />
    <!-- Blur depth buffer -->
    <rendertarget name="blurv" tag="Bloom" size="32 32" format="lineardepth" filter="true" />
    <rendertarget name="blurh" tag="Bloom" size="32 32" format="lineardepth" filter="true" />
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="BRIGHT" output="blurv">
        <parameter name="BloomThreshold" value="0.0" />
        <texture unit="diffuse" name="depth" />
    </command>
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="BLURH" output="blurh">
        <texture unit="diffuse" name="blurv" />
    </command>
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="BLURV" output="blurv">
        <texture unit="diffuse" name="blurh" />
    </command>
    <!-- Render global illumination -->
    <rendertarget name="globalillumination" size="32 32" format="rgb" filter="true" />
    <command type="quad" tag="SSGI" vs="SSGIForward" ps="SSGIForward" output="globalillumination">
        <texture unit="diffuse" name="viewport" />
        <texture unit="depth" name="blurv" />
    </command>
    <!-- Blur global illumination -->
    <rendertarget name="blurv2" tag="Bloom" size="32 32" format="rgb" filter="true" />
    <rendertarget name="blurh2" tag="Bloom" size="32 32" format="rgb" filter="true" />
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="BRIGHT" output="blurv2">
        <parameter name="BloomThreshold" value="0.0" />
        <texture unit="diffuse" name="globalillumination" />
    </command>
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="BLURH" output="blurh2">
        <texture unit="diffuse" name="blurv2" />
    </command>
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="BLURV" output="blurv2">
        <texture unit="diffuse" name="blurh2" />
    </command>
    <!-- Blend global illumination -->
    <command type="quad" tag="Bloom" vs="Bloom" ps="Bloom" psdefines="COMBINE" output="viewport">
        <parameter name="BloomMix" value="1.0 1.0" />
        <texture unit="diffuse" name="viewport" />
        <texture unit="normal" name="blurv2" />
    </command>
    <!-- SSGI End -->
</renderpath>
